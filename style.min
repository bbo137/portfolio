:root{--bg-color:#9198e5;font-size:16px}*,*::after,*::before{margin:0;padding:0;box-sizing:border-box}body{height:100vh;display:flex;flex:1;flex-direction:column}header{background:linear-gradient(170deg,var(--bg-color) 0px 385px,#fff 390px 990px)}.header-card{padding:2rem 4rem;display:flex}.header-img{display:flex;align-self:flex-start;position:relative}.header-img > img{display:flex;float:left;width:calc(18.5rem);height:calc(21rem);box-shadow:10px 10px 6px -4px rgba(0,0,0,0.35);object-fit:cover}.image-text{position:absolute;bottom:0.1rem;width:100%;color:#fff;text-align:center;font-size:2.5rem}.about{margin:2rem 0rem;padding:1rem 4rem 1rem 1rem;box-shadow:10px 7px 10px -1px rgba(0,0,0,0.25);background-color:#fff}.about > *{padding:1rem}.about > .icons{display:flex;justify-content:flex-end}.about > .icons > a{text-decoration:none}.about > .icons > a > *{margin:4px;height:24px;width:24px}main{margin:32px 64px;display:flex;flex:1;flex-direction:column}.card-container{display:grid;grid-template-columns:repeat(auto-fit,minmax(16.5rem,2fr));gap:2rem}.card{box-shadow:6px 4px 6px 0px rgba(0,0,0,0.25);padding-bottom:2rem}.card:hover{transition:opacity 0.5s;opacity:0.9}.card > .img{display:flex;align-items:center;background-color:#126d6d;width:100%;min-height:calc(10vw + 10rem);padding:2rem;color:#fff;font-size:2.5rem;text-align:center}.card:first-child > .img{background-color:#6d122d}.card:nth-child(2) > .img{background-color:#23126d}.card:nth-child(3) > .img{background-color:#246d12}.card:nth-child(4) > .img{background-color:#62126d}.card:nth-child(5) > .img{background-color:#6d3612}.card:nth-child(6) > .img{background-color:#12506d}.card > .header,.card > .description{margin:1rem 2rem}footer{background-color:var(--bg-color)}